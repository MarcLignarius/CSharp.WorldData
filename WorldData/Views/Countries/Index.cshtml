<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>World Data</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>World Data</h1>
    </div>
    <ul>
    @foreach (var country in Model)
    {
    <div class="list">
      <div class="card col-md-12">
        <div class="card-body">
          <h5 class="card-title">@country.CountryName</h5>
          <ul class="card-text">
            <li>Population: @country.CountryPopulation</li>
            <li>Region: @country.CountryRegion</li>
            <li>Continent: @country.CountryContinent</li>
          </ul>
          <br>
          <a href="/countries/@country.CountryCode" class="btn btn-dark">Major Cities</a>
          <a href="/" class="btn btn-dark">Back to Homepage</a>
        </div>
      </div>
    </div>
    }
    </ul>
  </div>
</body>
</html>
